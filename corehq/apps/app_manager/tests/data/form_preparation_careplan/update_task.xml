<h:html xmlns:h="http://www.w3.org/1999/xhtml" xmlns:orx="http://openrosa.org/jr/xforms"
	xmlns="http://www.w3.org/2002/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:jr="http://openrosa.org/javarosa">
	<h:head>
		<h:title>Edit Careplan Task</h:title>
		<model>
			<instance>
				<data xmlns:jrm="http://dev.commcarehq.org/jr/xforms"
					xmlns="http://dev.commcarehq.org/pact/careplan/task/update"
					uiVersion="1" version="1" name="Edit Careplan Task">
					<task_complete />
					<progress_group>
						<progress_made>yes</progress_made>
						<progress_update />
					</progress_group>
					<next_followup />
					
					<case xmlns="http://commcarehq.org/case/transaction/v2" case_id="" date_modified="" user_id="">
		    			<update>
							<date_followup/>
							<latest_report/>
		    			</update>
		    			<close/>
					</case>
					
					<parent_case_id/>
					<pact_id/>
					
					<orx:meta xmlns:cc="http://commcarehq.org/xforms">
						<orx:deviceID />
						<orx:timeStart />
						<orx:timeEnd />
						<orx:username />
						<orx:userID />
						<orx:instanceID />
						<cc:appVersion />
					</orx:meta>
				</data>
			</instance>
			<instance src="jr://instance/session" id="commcaresession" />
			<instance id="casedb" src="jr://instance/casedb"/>
						
			<setvalue event="xforms-ready" ref="/data/case/@case_id" value="instance('commcaresession')/session/data/case_id_task"/>
			<bind nodeset="/data/case/@date_modified" type="xsd:dateTime" calculate="/data/meta/timeEnd"/>
			<bind nodeset="/data/case/@user_id" calculate="/data/meta/userID"/>
			
			<bind nodeset="/data/parent_case_id" calculate="instance('commcaresession')/session/data/case_id"/>
			<bind nodeset="/data/pact_id" calculate="instance('casedb')/casedb/case[@case_id= /data/parent_case_id]/pactid" />
			
			<bind nodeset="/data/case/update/latest_report" relevant="count(/data/progress_group/progress_update) &gt; 0" calculate="/data/progress_group/progress_update"/>
			<bind nodeset="/data/case/update/date_followup" relevant="count(/data/next_followup) &gt; 0" calculate="/data/next_followup"/>
			<bind nodeset="/data/case/close" relevant="/data/task_complete = 'yes'"/>
			
					
			<bind nodeset="/data/task_complete" required="true()" />
			<bind nodeset="/data/progress_group" relevant="/data/task_complete = 'no'"/>
			<bind nodeset="/data/progress_group/progress_made" required="true()" />
			<bind nodeset="/data/progress_group/progress_update" type="xsd:string"
				relevant="/data/progress_group/progress_made = 'yes'" required="true()" />
			<bind nodeset="/data/next_followup" type="xsd:date" relevant="/data/task_complete = 'no'" required="true()"/>
			<itext>
				<translation lang="en" default="">
					<text id="task_complete-label">
						<value>Has the task been completed?</value>
					</text>
					<text id="task_complete-yes-label">
						<value>Yes</value>
					</text>
					<text id="task_complete-no-label">
						<value>Not Yet</value>
					</text>
					<text id="progress_group-label">
						<value>Progress</value>
					</text>
					<text id="progress_made-label">
						<value>Has progress been made towards this goal?</value>
					</text>
					<text id="progress_made-yes-label">
						<value>Yes</value>
					</text>
					<text id="progress_made-no-label">
						<value>No</value>
					</text>
					<text id="progress_update-label">
						<value>What's happened since the last update?</value>
					</text>
					<text id="next_followup-label">
						<value>When will you follow up again about this task?</value>
					</text>
				</translation>
			</itext>
			<setvalue ref="/data/meta/deviceID" event="xforms-ready"
				value="instance('commcaresession')/session/context/deviceid" />
			<setvalue ref="/data/meta/timeStart" event="xforms-ready"
				value="now()" />
			<bind nodeset="/data/meta/timeStart" type="xsd:dateTime" />
			<setvalue ref="/data/meta/timeEnd" event="xforms-revalidate"
				value="now()" />
			<bind nodeset="/data/meta/timeEnd" type="xsd:dateTime" />
			<setvalue ref="/data/meta/username" event="xforms-ready"
				value="instance('commcaresession')/session/context/username" />
			<setvalue ref="/data/meta/userID" event="xforms-ready"
				value="instance('commcaresession')/session/context/userid" />
			<setvalue ref="/data/meta/instanceID" event="xforms-ready"
				value="uuid()" />
			<setvalue ref="/data/meta/appVersion" event="xforms-ready"
				value="instance('commcaresession')/session/context/appversion" />
		</model>
	</h:head>
	<h:body>
		<select1 ref="/data/task_complete">
			<label ref="jr:itext('task_complete-label')" />
			<item>
				<label ref="jr:itext('task_complete-yes-label')" />
				<value>yes</value>
			</item>
			<item>
				<label ref="jr:itext('task_complete-no-label')" />
				<value>no</value>
			</item>
		</select1>
		<group ref="/data/progress_group" appearance="field-list">
			<label ref="jr:itext('progress_group-label')" />
			<select1 ref="/data/progress_group/progress_made">
				<label ref="jr:itext('progress_made-label')" />
				<item>
					<label ref="jr:itext('progress_made-yes-label')" />
					<value>yes</value>
				</item>
				<item>
					<label ref="jr:itext('progress_made-no-label')" />
					<value>no</value>
				</item>
			</select1>
			<input ref="/data/progress_group/progress_update">
				<label ref="jr:itext('progress_update-label')" />
			</input>
		</group>
		<input ref="/data/next_followup">
			<label ref="jr:itext('next_followup-label')" />
		</input>
	</h:body>
</h:html>